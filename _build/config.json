{
  "name": "SwitchTemplate",
  "lowCaseName": "switchtemplate",
  "description": "Switch resource templates on the fly",
  "author": "Thomas Jakobi",
  "version": "1.2.0-pl2",
  "package": {
    "menus": [
      {
        "text": "switchtemplate.menu_home",
        "description": "switchtemplate.menu_home_desc",
        "action": "home",
        "parent": "components"
      }
    ],
    "elements": {
      "plugins": [
        {
          "name": "SwitchTemplate",
          "file": "switchtemplate.plugin.php",
          "events": [
            "OnLoadWebPageCache",
            "OnLoadWebDocument",
            "OnPageNotFound"
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "debug",
        "type": "combo-boolean",
        "area": "system",
        "value": "0"
      },
      {
        "key": "mode_key",
        "area": "site",
        "value": "mode"
      },
      {
        "key": "mode_tv",
        "area": "site",
        "value": ""
      },
      {
        "key": "cache_resource_key",
        "area": "site",
        "value": "resource"
      },
      {
        "key": "cache_resource_handler",
        "area": "site",
        "value": "xPDOFileCache"
      },
      {
        "key": "cache_resource_expires",
        "area": "site",
        "value": "0"
      }
    ]
  },
  "database": {
    "tables": [
      "SwitchtemplateSettings"
    ]
  },
  "build": {
    "readme": "docs/readme.txt",
    "license": "docs/license.txt",
    "changelog": "docs/changelog.txt",
    "resolver": {
      "after": [
        "resolve.synctables.php"
      ]
    }
  }
}
