{
  "name": "SwitchTemplate",
  "lowCaseName": "switchtemplate",
  "description": "Switch resource templates on the fly",
  "author": "Thomas Jakobi",
  "version": "1.2.4",
  "package": {
    "menus": [
      {
        "text": "switchtemplate.menu",
        "description": "switchtemplate.menu_desc",
        "action": "home",
        "parent": "components"
      }
    ],
    "elements": {
      "plugins": [
        {
          "name": "SwitchTemplate",
          "file": "switchtemplate.plugin.php",
          "description": "Switch resource templates on the fly",
          "events": [
            "OnLoadWebPageCache",
            "OnLoadWebDocument",
            "OnPageNotFound"
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "debug",
        "type": "combo-boolean",
        "area": "system",
        "value": "0"
      },
      {
        "key": "mode_key",
        "area": "site",
        "value": "mode"
      },
      {
        "key": "mode_tv",
        "area": "site",
        "value": ""
      },
      {
        "key": "cache_resource_key",
        "area": "site",
        "value": "resource"
      },
      {
        "key": "cache_resource_handler",
        "area": "site",
        "value": "xPDOFileCache"
      },
      {
        "key": "cache_resource_expires",
        "area": "site",
        "value": "0"
      },
      {
        "key": "allow_debug_info",
        "type": "combo-boolean",
        "area": "site",
        "value": "0"
      }
    ]
  },
  "database": {
    "tables": [
      "SwitchtemplateSettings"
    ]
  },
  "dependencies": [
    {
      "name": "php",
      "version": ">=5.4"
    },
    {
      "name": "modx",
      "version": ">=2.6"
    }
  ],
  "build": {
    "readme": "docs/readme.md",
    "license": "docs/license.md",
    "changelog": "docs/changelog.md",
    "setupOptions": {
      "source": "setup.options.php"
    },
    "resolver": {
      "after": [
        "resolve.synctables.php",
        "resolve.treehillstudio.php"
      ]
    }
  }
}
